<h1><%= @article.title %></h1>
<p>
    <%= @article.text %>
</p>
<br/>
<h2>Comments:</h2>

<p>
  <% @article.comments.each do |comment| %>
    <p><i><%= comment.author %></i> : 
    <%= comment.body %></p>
    <hr/>
  <% end %>

</p>
<h2>Add comment</h2>
<%= form_for ([@article, @article.comments.build]) do |f| %>
 
  <p> 
    <%= f.label :author %> <br />
    <%= f.text_field :author %>
  </p>

  <p> 
    <%= f.label :body %> <br />
    <%= f.text_area :body %>
  </p>

  <%= f.submit 'Enter comment' %>

<%  end %>