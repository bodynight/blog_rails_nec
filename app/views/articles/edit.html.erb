<h1><%= t('articles.edit_article') %></h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>

  <% if @article && @article.errors.any?%>
  <p>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>

      <% end %>
    </ul>
  </p>
<% end %>  
 
  <p> 
    <%= f.label :title, class: "form-label" %> <br />
    <%= f.text_field :title, class: "form-control form-control-sm" %>
  </p>

  <p> 
    <%= f.label :text, class: "form-label" %> <br />
    <%= f.text_area :text, class: "form-control form-control-sm" %>
  </p>

  <%= f.submit class: "btn btn-primary" %>

<%  end %>